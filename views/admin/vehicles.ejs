<%- include('layout') %>

    <div class="panel-top">
        <div>
            <h1>Araç Yönetimi</h1>
            <p>Marka ve model yapılandırması</p>
        </div>
    </div>

    <div class="panel-grid split-2">
        <!-- Markalar -->
        <div class="panel-card">
            <div class="card-header">
                <span>Araç Markaları (<%= brands.length %>)</span>
            </div>
            <form action="/panel/araclar/add-brand" method="POST" class="form-grid compact" style="margin-bottom: 12px;">
                <div class="form-group" style="margin-bottom:0;">
                    <input type="text" name="name" placeholder="Yeni marka adı..." required />
                </div>
                <button class="btn" type="submit">Ekle</button>
            </form>

            <div style="display:flex; flex-wrap:wrap; gap:8px;">
                <% brands.forEach(b=> { %>
                    <div class="tag">
                        <%= b.name %>
                            <span class="delete-btn delete-brand-btn" data-id="<%= b.id %>">✕</span>
                    </div>
                    <% }); %>
            </div>
        </div>

        <!-- Modeller -->
        <div class="panel-card">
            <div class="card-header">
                <span>Araç Modelleri (<%= models.length %>)</span>
            </div>

            <form action="/panel/araclar/add-model" method="POST" style="margin-bottom: 32px;">
                <div class="form-grid tight" style="margin-bottom:16px;">
                    <div class="form-group" style="margin-bottom:0;">
                        <label>Marka</label>
                        <select name="brand_id" required>
                            <option value="">Seçiniz...</option>
                            <% brands.forEach(b=> { %>
                                <option value="<%= b.id %>">
                                    <%= b.name %>
                                </option>
                                <% }); %>
                        </select>
                    </div>
                    <div class="form-group" style="margin-bottom:0;">
                        <label>Model Adı</label>
                        <input type="text" name="name" placeholder="Ör: Corolla" required />
                    </div>
                </div>

                <div class="form-grid three-col align-end">
                    <div class="form-group" style="margin-bottom:0;">
                        <label>Başlangıç Yılı</label>
                        <input type="number" name="year_start" placeholder="2010" />
                    </div>
                    <div class="form-group" style="margin-bottom:0;">
                        <label>Bitiş Yılı</label>
                        <input type="number" name="year_end" placeholder="2024" />
                    </div>
                    <button class="btn" type="submit" style="height: 45px; padding: 0 32px;">Model Ekle</button>
                </div>
            </form>

            <div class="table-scroll">
                <table class="panel-table">
                    <thead style="position: sticky; top:0; z-index: 10;">
                        <tr>
                            <th>Marka</th>
                            <th>Model</th>
                            <th>Yıllar</th>
                            <th style="width: 50px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (models.length===0) { %>
                            <tr>
                                <td colspan="4" style="text-align:center; padding: 40px; color: var(--text-muted);">
                                    Henüz model eklenmemiş.</td>
                            </tr>
                            <% } %>
                                <% models.forEach(m=> { %>
                                    <tr>
                                        <td style="font-weight: 600;">
                                            <%= m.brand_name %>
                                        </td>
                                        <td>
                                            <%= m.name %>
                                        </td>
                                        <td>
                                            <span class="status success"
                                                style="background: transparent; color: var(--text-muted); font-size: 13px;">
                                                <%= m.year_start ? m.year_start + ' — ' + (m.year_end || 'Mevcut' )
                                                    : '—' %>
                                            </span>
                                        </td>
                                        <td style="text-align:right;">
                                            <button class="btn btn-outline btn-small delete-model-btn"
                                                data-id="<%= m.id %>"
                                                style="padding: 6px; min-width: 32px; border-radius: 6px;">
                                                ✕
                                            </button>
                                        </td>
                                    </tr>
                                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('click', async (e) => {
            if (e.target.closest('.delete-brand-btn')) {
                const id = e.target.closest('.delete-brand-btn').dataset.id;
                if (!confirm('Bu markayı ve TÜM bağlı modellerini silmek istediğinize emin misiniz?')) return;
                const res = await fetch('/panel/araclar/delete-brand/' + id, { method: 'POST' });
                if (res.ok) location.reload();
            }
            if (e.target.closest('.delete-model-btn')) {
                const id = e.target.closest('.delete-model-btn').dataset.id;
                if (!confirm('Bu modeli silmek istediğinize emin misiniz?')) return;
                const res = await fetch('/panel/araclar/delete-model/' + id, { method: 'POST' });
                if (res.ok) location.reload();
            }
        });
    </script>
