<%- include('partials/header') %>

    <script type="application/ld+json">
{"@context":"https://schema.org","@type":"Store","name":"Auto Akın","description":"<%= pageDesc %>","priceRange":"₺₺","currenciesAccepted":"TRY"}
</script>

    <!-- Hero -->
    <section class="hero">
        <div class="hero-left">
            <div class="badge">Auto Akın Pazaryeri</div>
            <h1>Aradığın tüm otomotiv parçaları tek yerde.</h1>
            <p class="muted">Fren, süspansiyon, motor, kaporta, aksesuar ve daha fazlası. Hızlı tedarik, net fiyat,
                güvenli ödeme.</p>
            <form class="searchbar" action="/urunler" method="GET">
                <input type="text" name="q" placeholder="Ürün, marka veya OEM no ara..." />
                <button class="btn" type="submit">Ara</button>
            </form>
            <div class="hero-cta">
                <a class="btn" href="/urunler">Öne Çıkanlar</a>
                <a class="btn btn-black" href="/urunler">Tüm Ürünler →</a>
            </div>
            <div class="hero-pills">
                <span><span class="dot"></span> Aynı gün kargo</span>
                <span><span class="dot"></span> IBAN ile güvenli ödeme</span>
                <span><span class="dot"></span> 7/24 canlı destek</span>
            </div>
        </div>
        <div class="hero-right">
            <div class="hero-card">
                <div class="hero-card-header">Bugün Öne Çıkanlar</div>
                <ul class="hero-list">
                    <% discounted.forEach(d=> { %>
                        <% const disc=d.old_price ? Math.round((1 - d.price / d.old_price) * 100) : 0; %>
                            <li>
                                <a href="/urun/<%= d.id %>">
                                    <span class="pill pill-red">-%<%= disc %></span>
                                    <span><%= d.name %></span>
                                </a>
                            </li>
                            <% }); %>
                                <% if (!discounted.length) { %>
                                    <li>Henüz indirimli ürün yok</li>
                                    <% } %>
                </ul>
                <a class="btn btn-block" href="/urunler">Tümünü Gör</a>
            </div>
        </div>
    </section>

    <section class="meta-strip">
        <div class="meta-item"><span class="dot"></span> 750₺ üzeri kargo bedava</div>
        <div class="meta-item"><span class="dot"></span> OEM & muadil parça desteği</div>
        <div class="meta-item"><span class="dot"></span> Faturalı satış, iade garantisi</div>
    </section>

    <!-- Araç Seçici -->
    <% if (vehicleBrands.length) { %>
        <section class="section light">
            <div class="section-header">
                <h2>Aracına Göre Parça Bul</h2>
            </div>
            <form class="filter-bar card-flat" action="/urunler" method="GET">
                <div class="filter-field">
                    <label>Marka</label>
                    <select name="vehicle_brand_id" id="vBrand" onchange="loadModels(this.value,'vModel')">
                        <option value="">Seçin</option>
                        <% vehicleBrands.forEach(vb=> { %>
                            <option value="<%= vb.id %>"><%= vb.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="filter-field">
                    <label>Model</label>
                    <select name="vehicle_model_id" id="vModel">
                        <option value="">Önce marka seçin</option>
                    </select>
                </div>
                <button class="btn btn-lg" type="submit">Parça Bul</button>
            </form>
        </section>
        <% } %>

            <!-- Kategoriler -->
            <section id="kategoriler" class="section">
                <div class="section-header">
                    <h2>Kategoriler</h2><a class="link-underline" href="/urunler">Tümü</a>
                </div>
                <div class="grid grid-5">
                    <% categories.forEach(cat=> { %>
                        <a class="cat-card" href="/urunler?category_id=<%= cat.id %>">
                            <div class="cat-icon">
                                <%= cat.icon %>
                            </div>
                            <div class="cat-name">
                                <%= cat.name %>
                            </div>
                            <div class="cat-count">
                                <%= cat.product_count %> ürün
                            </div>
                        </a>
                        <% }); %>
                </div>
            </section>

            <!-- Ürünler -->
            <section class="section light">
                <div class="section-header">
                    <h2>Sana Özel Ürünler</h2><a class="link-underline" href="/urunler">Tümü</a>
                </div>
                <div class="grid grid-5">
                    <% featured.slice(0,10).forEach(p=> { %>
                        <a class="product-card" href="/urun/<%= p.id %>">
                            <div class="product-img">
                                <% if (p.badge) { %><span class="product-badge">
                                        <%= p.badge %>
                                    </span>
                                    <% } %>
                                        <% if (p.image) { %><img src="/<%= p.image %>" alt="<%= p.name %>" />
                                            <% } %>
                            </div>
                            <div class="product-brand">
                                <%= p.brand || '' %>
                            </div>
                            <div class="product-title">
                                <%= p.name %>
                            </div>
                            <div class="product-prices">
                                <span class="product-price">
                                    <%= Number(p.price).toLocaleString('tr-TR') %> TL
                                </span>
                                <% if (p.old_price) { %><span class="product-old-price">
                                        <%= Number(p.old_price).toLocaleString('tr-TR') %> TL
                                    </span>
                                    <% } %>
                            </div>
                            <button class="btn btn-small add-to-cart-btn" data-id="<%= p.id %>">Sepete Ekle</button>
                        </a>
                        <% }); %>
                            <% if (!featured.length) { %>
                                <div class="empty-state" style="grid-column:1/-1;">
                                <div class="empty-state-icon">Stok yok</div>
                                    <h3>Henüz ürün eklenmemiş</h3>
                                    <p class="muted">Admin panelinden ürün ekleyebilirsiniz.</p>
                                </div>
                                <% } %>
                </div>
            </section>

            <!-- Destek -->
            <section id="destek" class="section">
                <div class="row"
                    style="background: #fff; padding: 48px; border-radius: 20px; border: 1px solid #eee; display: flex; align-items: center; justify-content: space-between; gap: 32px; flex-wrap: wrap;">
                    <div style="flex: 1; min-width: 300px;">
                        <h2 style="margin-bottom: 12px;">Sorun mu var? Canlı Destek Yanında!</h2>
                        <p class="muted">Ürün uyumluluğu, stok durumu veya kargo takibi hakkında merak ettiğin her şeyi
                            uzman ekibimize sorabilirsin.</p>
                    </div>
                <button class="btn btn-lg" onclick="document.getElementById('chatToggle').click()">Hemen Sohbete
                    Başla</button>
                </div>
            </section>

            <%- include('partials/footer') %>
