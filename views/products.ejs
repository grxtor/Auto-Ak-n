    <script>
        function loadProducts() {
            const q = document.getElementById('searchInput').value.trim();
            const cat = document.getElementById('categoryFilter').value;
            const brand = document.getElementById('vBrandFilter').value;
            const model = document.getElementById('vModelFilter').value;
            const sort = document.getElementById('sortFilter').value;

            let url = '/api/products?';
            if (q) url += 'q=' + encodeURIComponent(q) + '&';
            if (cat) url += 'category_id=' + cat + '&';
            if (model) url += 'vehicle_model_id=' + model + '&';
            else if (brand) url += 'vehicle_brand_id=' + brand + '&';
            if (sort) url += 'sort=' + sort;

            fetch(url).then(r => r.json()).then(products => {
                const grid = document.getElementById('productsGrid');
                const empty = document.getElementById('emptyState');
                document.getElementById('resultsCount').textContent = products.length + ' Ã¼rÃ¼n';

                if (!products.length) { grid.style.display = 'none'; empty.style.display = 'block'; return; }
                grid.style.display = ''; empty.style.display = 'none'; grid.innerHTML = '';

                products.forEach(p => {
                    const img = p.image ? `<img src="/${p.image}" alt="${p.name}" />` : '';
                    const old = p.old_price ? `<span class="product-old-price">${Number(p.old_price).toLocaleString('tr-TR')} TL</span>` : '';
                    const badge = p.badge ? `<span class="product-badge">${p.badge}</span>` : '';
                    const oem = p.oem_no ? `<div style="font-size:11px;color:var(--gray-500);">OEM: ${p.oem_no}</div>` : '';

                    grid.innerHTML += `<a class="product-card" href="/urun/${p.id}">
        <div class="product-img">${badge}${img}</div>
        <div class="product-brand">${p.brand || ''}</div>
        <div class="product-title">${p.name}</div>
        ${oem}
        <div class="product-prices"><span class="product-price">${Number(p.price).toLocaleString('tr-TR')} TL</span>${old}</div>
        <button class="btn btn-small add-to-cart-btn" data-id="${p.id}">Sepete Ekle</button>
      </a>`;
                });
            });
        }

        document.addEventListener('DOMContentLoaded', () => {
            loadProducts();
            document.getElementById('searchInput').addEventListener('input', debounce(loadProducts, 300));
            ['categoryFilter', 'vModelFilter', 'sortFilter'].forEach(id => document.getElementById(id).addEventListener('change', loadProducts));

            const bar = document.querySelector('.filter-bar');
            const startBrand = bar.dataset.brand;
            const startModel = bar.dataset.model;

            if (startBrand) {
                loadModels(startBrand, 'vModelFilter');
                if (startModel) {
                    setTimeout(() => {
                        document.getElementById('vModelFilter').value = startModel;
                        loadProducts();
                    }, 500);
                }
            }
        });

        function debounce(fn, ms) { let t; return (...a) => { clearTimeout(t); t = setTimeout(() => fn(...a), ms); }; }
    </script>

